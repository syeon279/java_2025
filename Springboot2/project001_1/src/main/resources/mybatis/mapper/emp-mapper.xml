<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.project001.dao.EmpDao">

	<select resultType="EmpDto" id="test1"
		parameterType="java.util.HashMap">
		select * from emp where ${searchType} = #{keyword}
	</select>

	<select resultType="EmpDto" id="test2"
		parameterType="java.util.HashMap">
		select * from emp where ename = #{ename}
		<if test="job != null"> and job = #{job} </if>
	</select>

	<select resultType="EmpDto" id="test3" parameterType="EmpDto">
		select * from emp where empno = ${empno}
		<choose>
			<when test="ename != null"> and ename = #{ename}</when>
			<when test="job != null"> and job = #{job} </when>
			<otherwise> and mgr = #{mgr} </otherwise>
		</choose>
	</select>

	<select resultType="EmpDto" id="test4" parameterType="EmpDto">
		select * from emp
		<where>
			<if test="ename != null"> and ename = #{ename} </if>
			<if test="job != null"> and job = #{job} </if>
			<!-- <if test="mgr != null"> and mgr = #{mgr} </if> -->
		</where>
	</select>
	<!-- 
		mysql> select * from emp mysql> select * from emp where ename='SMITH' 
		mysql> select * from emp where job='clerk' mysql> select * from emp where 
		ename='SMITH' and job='clerk'
	 -->

	<select resultType="EmpDto" id="test5" parameterType="EmpDto">
		update emp
			<set>
				<if test="ename != null"> ename = #{ename}, </if>			 
				<if test="job != null"> job = #{job}, </if>
			</set> 
		where empno = #{empno}
		<!--   -->
	</select>
	
	<select resultType="EmpDto" id="test6" parameterType="EmpDto">
		select * from emp
			<where>
			empno in 
				<foreach item="no" separator="," collection="list" open="(" close=")"> #{no} </foreach>	 
			</where> 
		<!--   -->
	</select>
	
</mapper>